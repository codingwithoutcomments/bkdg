<% if(show.price_option == 'UNKNOWN') %>
	<%= link_to 'Add Price', edit_show_path(@show, :highlight => "price") %>
<% else %>

	<% if (show.price_option == 'FREE') then %>
		FREE
	<% elsif (show.price_option == 'DONATION') %>
		By Donation
	<% else %>
		<% if show.price != nil then %> $<%= format_price(show.price) %> DOS <% end %>
		<% if show.price != nil && show.advanceprice != nil then %> | <% end %>
		<% if show.advanceprice != nil then %> $<%= format_price(show.advanceprice) %> ADV <% end %>
	<% end %>
	
<% end %>