<div class='singleComment'>
	<div class = 'usercomment'><span><%= comment.user_comment %></span></div>
	<div class='commentInformation'>
		<div class='utility'>
			<span class='commentCreated'><%= didwhen(comment.created_at)%></span>
		</div>
		<div class='commentUserInfo'>
			<div class='gravitar'><%= image_tag comment.user.gravatar_url(:size => 40) %></div>
			<div class='usernameLink'><%= link_to comment.user.username, { :controller => 'users', :action => 'show', :id => comment.user } %></div>
			<div class='usernamePoints'><%=     comment.user.points.to_s     %></div>
		</div>
	</div>
	<hr style='width:625px;float:left;'>
</div>