<%= stylesheet_link_tag 'login' %>

<div class = "login-form">
	<% form_tag do %>
	
			<div class='PleaseLogIn'>Please Log In</div>
			
			<div class='Email'>
				<span class='EmailLabel'><label for="name">Email </label></span>
				<span><%= text_field_tag :name, params[:name] %></span>
			</div>
			
			<div class='Password'>
				<span class='PasswordLabel'><label for="password">Password </label></span>
 				<span><%= password_field_tag :password, params[:password] %></span>
			</div>
			
			<div>
				<%= submit_tag "Login", :class => "submit" %>
			</div>
			
			<div>
				<%= link_to 'Don\'t have an account?  Sign Up', new_user_path %>
			<div>
		
	<% end %>
</div>