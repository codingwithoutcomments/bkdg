var $j = jQuery.noConflict();

$j(document).ready(function()
{
	$j("#followControl").html('<%= escape_javascript(render(:partial => "display_following", :locals => { :user => @user, :friendship => @friendship }))%>');
	
	$j('<%= escape_javascript(render(:partial => "notice_following", :locals => { :friendship => @friendship }))%>').insertBefore('#userHeader');
	$j("#notice")
		.css("display", "none")
		.fadeIn("slow");
		
	setTimeout(function() { $j('#notice').fadeOut("slow", function(){  $j(this).remove(); }) }, 3000);

});