<% content_for :title do %>  <title>BKDG: Choose Your Location </title> <% end %>
<%= stylesheet_link_tag 'locations' %>
<div id = "mainbar-full">
	
	<div id='showsHeader'>
		<h3>Choose Your Location</h3>
	</div>
	
	<div id='locationsContainer'>
	
		<% for location in @locations %>
			
				<div class='singleLocation'>
					<%= link_to location.city, :action => 'show', :id => location %> 
				</div>

			<br />
		<%end %>
	
	</div>
	
</div>